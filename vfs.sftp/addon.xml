<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.sftp"
  version="1.0.0"
  name="SFTP support"
  provider-name="spiff">
  <requires>
    <import addon="xbmc.vfs" version="1.0.0"/>
  </requires>
  <extension
    point="xbmc.vfs"
    protocols="sftp|ssh"
    files="true"
    directories="true"
    library_linux="vfs.sftp.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">SFTP support</summary>
    <description lang="en">SFTP support</description>
    <platform>all</platform>
  </extension>
</addon>
